<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_title_bar">
        56 t <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_nav_back"
                android:layout_gravity="center"></Button>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:textColor="#ffffff"
                  android:text="四川菜（川菜）"></TextView>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/u125_normal"
                android:layout_gravity="center"></Button>
        <Button android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/u65_normal"
                android:layout_gravity="center"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/u39_normal"
                  android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="范围:3000内"
           ></TextView>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"></ImageView>
    </LinearLayout>
     <FrameLayout android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
                                      android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"
                />
         <LinearLayout android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom"
                       android:padding="10dp"
                       android:orientation="horizontal">
              <Button  android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/ic_pre_step"
                ></Button>
              <Button  android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="5dp"
                     android:background="@drawable/ic_next_step"
              ></Button>
             <Button  android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="165dp"
                      android:background="@drawable/ic_location"
                     ></Button>
         </LinearLayout>
     </FrameLayout>
</LinearLayout>