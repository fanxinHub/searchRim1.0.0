<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_title_bar">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_nav_back"
                android:layout_gravity="center"></Button>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:textColor="#ffffff"
                  android:text="详细信息"></TextView>
        <Button android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/u54_normal"
                android:layout_gravity="center"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/u36_normal"
             >
           <Button  android:id="@+id/walkBut"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/u38_normal"
                   android:drawableLeft="@drawable/ic_byfoot"
                   android:text="步行"></Button>
        <Button   android:id="@+id/busBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/u36_normal"
                android:text="公交"></Button>
        <Button android:id="@+id/driveBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/u36_normal"
                android:drawableLeft="@drawable/ic_bycar"
                android:text="驾车"></Button>
    </LinearLayout>


    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
         >

        <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
                                      android:layout_width="fill_parent"
                                      android:layout_height="fill_parent"/>
            <!--<ImageView android:layout_width="match_parent"-->
                       <!--android:layout_height="wrap_content"-->
                       <!--android:src="@drawable/ditu1"></ImageView>-->
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/u51_normal"
                          android:gravity="top">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:text=""></TextView>
                </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="bottom" >
                  <LinearLayout
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/u32_normal">
                      <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:textColor="#000000"
                              android:text="asdfhdgyj"></TextView>
                      <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"

                              android:padding="5dp"
                              android:textColor="#000000"
                              android:text="asdfhdgyj"></TextView>
                  </LinearLayout>
                 <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:background="#ffffff"
                         android:padding="5dp"
                         android:drawableLeft="@drawable/ic_phone"
                         android:textColor="#000000"
                         android:text=" 029-123456"></TextView>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>